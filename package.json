{
  "name": "image-optimisation-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "check": "npm run check:type && npm run check:lint && npm run check:format",
    "check:type": "tsc",
    "check:lint": "eslint src/**",
    "check:format": "prettier --check src/**",
    "fix": "npm run fix:lint && npm run fix:format",
    "fix:format": "prettier --write src/**",
    "fix:lint": "eslint src/** --fix",
    "clean": "rimraf dist",
    "build": "npm run build:js && npm run build:css",
    "build:js": "swc src -d dist --strip-leading-paths",
    "build:css": "postcss views/styles/app.css -o public/stylesheets/style.css",
    "build:watch": "chokidar \"src/**/*.ts\" \"views/**/*.ejs\" \"views/**/*.css\" -c 'npm run build'",
    "serve": "node --env-file=.env dist/index.js",
    "serve:watch": "nodemon --verbose --watch 'dist/**/*.js' --watch 'views/**/*.ejs' --watch 'public/**/*.css' --exec 'npm run serve'",
    "dev": "npm run build && concurrently \"npm run build:watch\"  \"npm run serve:watch\"",
    "start": "npm run clean && npm run build && npm run serve"
  },
  "engines": {
    "node": "22.x"
  },
  "engine-strict": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sujeet-pro/image-optimisation-service.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sujeet-pro/image-optimisation-service/issues"
  },
  "homepage": "https://github.com/sujeet-pro/image-optimisation-service#readme",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.8",
    "@swc/jest": "^0.2.37",
    "@swc/plugin-transform-imports": "^6.0.5",
    "@tailwindcss/postcss": "^4.0.0-beta.9",
    "@tsconfig/node-lts": "^22.0.1",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/method-override": "^3.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.7",
    "@types/response-time": "^2.3.8",
    "@types/sharp": "^0.31.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.0.0-beta.9",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "http-errors": "^2.0.0",
    "http-terminator": "^3.2.0",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "response-time": "^2.3.3",
    "winston": "^3.17.0"
  }
}
